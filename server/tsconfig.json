{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "experimentalDecorators": true,      
    "emitDecoratorMetadata": true,     
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "src",
    "lib": ["ES2019", "DOM"]
  },
  "include": ["src/**/*"]
}
